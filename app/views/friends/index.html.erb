<p style="color: green"><%= notice %></p>

<h1>Friend List</h1>

<table class="table table-striped table-bordered table-hover" id="friends">
<thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Twitter</th>
  </tr>
  </thead>

  <tbody>
  <tr>
  <% @friends.each do |friend| %>
    <%= render friend %>
    </tbody>
  <% end %>
  
</table>

<%= button_to "Add Friend", new_friend_path, class:"btn-secondary" %>