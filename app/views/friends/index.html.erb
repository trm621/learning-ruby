<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover" id="friends">
<thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Twitter</th>
  </tr>
  </thead>

  <tbody>
  <tr>
  <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <%= render friend %>
    </tbody>
  <% end %>
  <% end %>
  
</table>

<%= button_to "Add Friend", new_friend_path, class:"btn-secondary" %>

<% else %>

<h1>Welcome to the Friends App!</h1>
This is a place for you to keep track of your friends' email addresses, phone numbers, and Twitter handles.

<% end %>