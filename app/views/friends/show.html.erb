
  <div class="card w-50" id="<%= dom_id @friend %>">
  <div class="card-body">
    <h2 class="card-title"><%= @friend.first_name %>    
    <%= @friend.last_name %></h2>
    <br>
    <p class="card-text">    
    <strong>Email: </strong><%= @friend.email %></p>
    <p>
    <strong>Phone:</strong>
    <%= @friend.phone %>
  </p>
    <p class="card-text">   
    <strong>Twitter:</strong>
    <%= @friend.twitter %></p> 
    <% if @friend.user == current_user %>
    <%= link_to "Edit this Friend", edit_friend_path(@friend), class:"btn btn-primary" %>
    <br>
    <br>
    
    <%= button_to "Delete this Friend", @friend, method: :delete, class:"btn btn-primary", data: {confirm: "Are you sure?"}  %>    <% end %>
    <br>
  
    <%= link_to "Back to Friends", friends_path, class:"btn btn-primary" %>
    <br/></br>
</div>