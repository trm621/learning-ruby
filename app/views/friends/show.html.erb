<div id="<%= dom_id @friend %>">
  <p>
    <strong>First Name:</strong>
    <%= @friend.first_name %>
  </p>

  <p>
    <strong>Last Name:</strong>
    <%= @friend.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @friend.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @friend.phone %>
  </p>

  <p>
    <strong>Twitter:</strong>
    <%= @friend.twitter %>
  </p>

</div>
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> 
  <br>
  <br>
  
  <%= button_to "Destroy this friend", @friend, class:"btn btn-secondary", method: :delete %>
  <br>
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
  <br/></br>
</div>
